		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.2",
		"@vitest/coverage-v8": "^4.0.16",
		"autoprefixer": "^10.4.23",
		"concurrently": "^9.2.1",
		"esbuild": "^0.27.2",
		"husky": "^9.1.7",
		"lint-staged": "^15.2.10",
		"nodemon": "^3.1.11",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.7.2",
		"vite": "^7.3.0",
		"vitest": "^4.0.16"
	}
}
