{
	"name": "knowns",
	"version": "0.8.2",
	"description": "AI-native task and documentation management for dev teams",
	"module": "index.ts",
	"type": "module",
	"bin": {
		"knowns": "./dist/index.js",
		"kn": "./dist/index.js"
	},
	"main": "./dist/index.js",
	"files": ["dist", "README.md", "CHANGELOG.md", "LICENSE"],
	"keywords": ["cli", "task-management", "documentation", "knowledge-base", "team-tools", "developer-tools"],
	"author": "howznguyen <howznguyen@knowns.dev>",
	"license": "MIT",
	"engines": {
		"node": ">=18.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/knowns-dev/knowns.git"
	},
	"homepage": "https://cli.knowns.dev",
	"bugs": {
		"url": "https://github.com/knowns-dev/knowns/issues"
	},
	"scripts": {
		"dev": "npx tsx --import ./scripts/md-loader.mjs src/index.ts browser --no-open -p 3456",
		"watch": "nodemon",
		"build": "npm run build:cli && npm run build:ui",
		"build:cli": "node scripts/build-cli.js",
		"build:ui": "vite build",
		"start": "npx tsx --import ./scripts/md-loader.mjs src/index.ts",
		"mcp": "npx tsx --import ./scripts/md-loader.mjs src/mcp/server.ts",
		"test": "vitest run",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"prepare": "husky"
	},
	"dependencies": {
		"@blocknote/core": "^0.45.0",
		"@blocknote/react": "^0.45.0",
		"@blocknote/shadcn": "^0.45.0",
		"@dnd-kit/core": "^6.3.1",
		"@dnd-kit/sortable": "^10.0.0",
		"@dnd-kit/utilities": "^3.2.2",
		"@modelcontextprotocol/sdk": "^1.25.1",
		"@radix-ui/react-checkbox": "^1.3.3",
		"@radix-ui/react-collapsible": "^1.1.12",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@radix-ui/react-label": "^2.1.8",
		"@radix-ui/react-navigation-menu": "^1.2.14",
		"@radix-ui/react-popover": "^1.1.15",
		"@radix-ui/react-progress": "^1.1.8",
		"@radix-ui/react-scroll-area": "^1.2.10",
		"@radix-ui/react-select": "^2.2.6",
		"@radix-ui/react-separator": "^1.1.8",
		"@radix-ui/react-slot": "^1.2.4",
		"@radix-ui/react-tooltip": "^1.2.8",
		"@tanstack/react-table": "^8.21.3",
		"@tiptap/extensions": "^3.14.0",
		"@types/cors": "^2.8.19",
		"@uiw/react-md-editor": "^4.0.11",
		"chalk": "^5.3.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cmdk": "^1.1.1",
		"commander": "^12.1.0",
		"cors": "^2.8.5",
		"express": "^5.2.1",
		"framer-motion": "^12.23.26",
		"gray-matter": "^4.0.3",
		"lucide-react": "^0.562.0",
		"marked": "^17.0.1",
		"prompts": "^2.4.2",
		"react": "^19.2.3",
		"react-diff-viewer": "^3.1.1",
		"react-dom": "^19.2.3",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.4.0",
		"tunnel-rat": "^0.1.2",
		"turndown": "^7.2.2",
		"unist-util-visit": "^5.0.0",
		"zod": "^4.2.1"
	},
	"overrides": {
		"react-diff-viewer": {
			"react": "$react",
			"react-dom": "$react-dom"
		}
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@tailwindcss/vite": "^4.1.18",
		"@types/bun": "latest",
		"@types/express": "^5.0.6",
		"@types/prompts": "^2.4.9",
